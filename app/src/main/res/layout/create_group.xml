<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg"
    tools:context="com.example.wiezenxi.final_project.MainActivity">


    <EditText
        android:id="@+id/new_group_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:hint="Enter the new group name" />

    <Button
        android:id="@+id/new_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/new_group_name"
        android:layout_below="@id/new_group_name"
        android:background="@drawable/button_background"
        android:text="OK" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:layout_alignEnd="@id/new_group_name"
        android:layout_below="@id/new_group_name"
        android:text="back"
        android:id="@+id/new_back" />


</RelativeLayout>
